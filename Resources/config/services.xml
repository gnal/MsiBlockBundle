<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="msi_block.example.class">Msi\Bundle\BlockBundle\Example</parameter>
    </parameters>
    -->
    <services>
        <service id="msi_block.settings.form.type" class="Msi\Bundle\BlockBundle\Form\Type\SettingsType">
            <tag name="form.type" alias="msi_block_settings" />
        </service>

        <service id="msi_block.text.block.type" class="Msi\Bundle\BlockBundle\Block\Type\TextType">
            <argument type="service" id="templating" />
            <argument>%msi_block.name_choices%</argument>
        </service>

        <service id="msi_block.action.block.type" class="Msi\Bundle\BlockBundle\Block\Type\ActionType">
            <argument type="service" id="templating" />
            <argument>%msi_block.name_choices%</argument>
            <argument type="service" id="http_kernel" />
        </service>

        <service id="msi_block.template.block.type" class="Msi\Bundle\BlockBundle\Block\Type\TemplateType">
            <argument type="service" id="templating" />
            <argument>%msi_block.name_choices%</argument>
            <argument>%msi_block.template_choices%</argument>
        </service>

        <service id="msi_block.block.twig.extension" class="Msi\Bundle\BlockBundle\Twig\Extension\BlockExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
